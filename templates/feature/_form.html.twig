        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>
    <div class="col-sm-12 col-md-2">
        {{ form_label(form.day, "Charge") }}
    </div>
    <div class="col-sm-12 col-md-12 ">
        {{ form_widget(form.day) }}
