{% extends 'base.html.twig' %}

{% block title %}Big Bill | Projets{% endblock %}

{% block body %}
    <h1>Liste des projets</h1>
    <div class="new-project text-right">
        <a href="{{ path('project_new') }}" class="btn" title="Nouveau projet">
            <i class="fas fa-plus-circle"></i>
        </a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">Nom du projet </th>
                <th class="text-center">Date de création</th>
                <th class="text-center">Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td class="text-center">{{ project.name }}</td>
                <td class="text-center">{{ project.date ? project.date|date('d-m-Y') : '' }}</td>
                <td class="text-center">{{ project.description }}</td>
                <td class="btn-group">
                    {{ include('project/_delete_form.html.twig') }}
                    <a title="Editer" class="btn btn-sm btn-primary ml-2" href="{{ path('project_edit', {'id': project.id}) }}">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="text-center" colspan="4">Pas de projets enregistrés !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('newProject') }}
{% endblock %}
