{% extends 'base.html.twig' %}

{% block title %}Big Bill | Projets{% endblock %}

{% block body %}
    <h1>Liste des projets</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">Nom du projet </th>
                <th class="text-center">Date de création</th>
                <th class="text-center">Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td class="text-center">{{ project.name }}</td>
                <td class="text-center">{{ project.date ? project.date|date('d-m-Y') : '' }}</td>
                <td class="text-center">{{ project.description }}</td>
                <td class="text-center">
                    <a title="Editer" class="btn btn-sm btn-primary" href="{{ path('project_edit', {'id': project.id}) }}">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="text-center" colspan="4">Pas de projets enregistrés !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
