{% extends 'security/security.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Big Bill{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1>Big Bill</h1>
        </div>
    </div>
    <div class="row align-items-center justify-content-center">
        <div class="col-md-6 col-md-offset-4">
            <div class="form-card card">
                <div class="card-body">
                    <div class="text-center">
                        <img src="{{ asset('build/img/lock.png') }}" alt="car-key">
                        <h2 class="text-center pt-3 pb-3">Saisissez votre mot de passe</h2>
                        {{ form_start(form) }}
                        <div class="row text-left pb-2">
                            {{form_help(form.password)}}
                        </div>
                        <div class="row form-group">
                            {{ form_label(form.password.first) }}
                            <div class="input-group pt-2">
                                {{ form_widget(form.password.first) }}
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary button_password" type="button"><i class="fas fa-eye"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            {{ form_label(form.password.second) }}
                            <div class="input-group pt-2">
                                {{ form_widget(form.password.second) }}
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary button_password" type="button"><i class="fas fa-eye"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="row form-group d-flex justify-content-center">
                            <button class="btn btn-primary">Valider</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('securityjs') }}
{% endblock %}
