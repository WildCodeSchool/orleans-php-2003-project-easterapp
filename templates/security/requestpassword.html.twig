{% extends 'security/security.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Big Bill{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col-12">
            <h1>Big Bill</h1>
        </div>
    </div>

    <div class="row align-items-center justify-content-center">
        <div class="col-md-6 col-md-offset-4">
            <div class="form-card card">
                <div class="card-body">
                    <div class="text-center">
                        <img src="{{ asset('build/img/envelope.png') }}" alt="car-key">
                        <h2 class="text-center pt-3 pb-4">Mot de passe oubli√© ?</h2>
                        {{ form_start(form) }}
                        <div class="row form-group">
                            <p class="text-left">Renseignez votre mail pour demander le changement de votre mot de passe</p>
                            {{ form_widget(form.email) }}
                        </div>
                        <div class="row form-group d-flex justify-content-center">
                            <button class="btn btn-primary">Envoyer</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('securityjs') }}
{% endblock %}
