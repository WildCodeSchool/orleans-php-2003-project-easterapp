{% form_theme form 'bootstrap_4_layout.html.twig' %}
    <div class="modal fade" id="userEditModal{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                {{ form_start(form, {'action': path('user_edit', {'id': user.id})}) }}
                <div class="modal-header">
                    <h5 class="modal-title" id="createModalLabel">Modifier le rôle de l'utilisateur {{ user.firstname }} {{ user.lastname }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row form-group">
                        <div class="col-sm-12 col-md-10l">
                            {{ form_label(form.roles, "Rôles disponible") }}
                        </div>
                        <div class="col-sm-12 col-md-2">
                            {{ form_widget(form.roles) }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer float-right">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-success">Sauvegarder</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
