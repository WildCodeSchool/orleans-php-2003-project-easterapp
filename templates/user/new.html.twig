{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Big Bill | Nouvel utilisateur{% endblock %}

{% block body %}
    <h1>Création d'un nouvel utilisateur</h1>

    <section class="sheet">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="container">
            <div class="row form-group">
                <div class="col-sm-12 col-md-2">
                    {{ form_label(form.lastname, "Nom") }}
                </div>
                <div class="col-sm-12 col-md-10l">
                    {{ form_widget(form.lastname) }}
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-12 col-md-2">
                    {{ form_label(form.firstname, "Prénom") }}
                </div>
                <div class="col-sm-12 col-md-10l">
                    {{ form_widget(form.firstname) }}
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-12 col-md-2">
                    {{ form_label(form.email, "Email") }}
                </div>
                <div class="col-sm-12 col-md-10l">
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-12 col-md-2">
                    {{ form_label(form.roles, "Rôles") }}
                </div>
                <div class="col-sm-12 col-md-10l">
                    {{ form_widget(form.roles) }}
                </div>
            </div>
        </div>
        <div class="button-panel container">
            <button class="btn btn-primary form-btn">Créer le compte de l'utilisateur</button>
            <a class="btn btn-outline-primary form-btn" href="{{ path('user_index') }}">Revenir à la liste des
                utilisateurs</a>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
